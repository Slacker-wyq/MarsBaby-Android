<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PushOrderActivity">

    <com.vondear.rxtools.view.RxTitle
        android:id="@+id/rx_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:clipToPadding="true"
        android:fitsSystemWindows="true" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="服务内容"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/add_childtype"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:entries="@array/sex" />
    <CheckBox
        android:id="@+id/fujia"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="附加服务"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/fujia_type"
        android:layout_width="250dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:entries="@array/sex" />

    <Spinner
        android:visibility="gone"
        android:id="@+id/fujia_childtype"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:entries="@array/sex" />



    <TextView
        android:id="@+id/choose_address"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="选择省市区"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/add_address"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="详细地址"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/add_date"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="时间"
        android:textSize="14sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/register_submit_bt"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_login_selector"
        android:gravity="center"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="18sp" />


</LinearLayout>